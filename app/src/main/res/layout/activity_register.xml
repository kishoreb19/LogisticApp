<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">
    <LinearLayout
        android:gravity="center"
        android:padding="5dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/register_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/back_arrow"
            />
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logistics_logo_transparent"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/registerScreenContent"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    app:lottie_rawRes="@raw/register"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    />
            </LinearLayout>
            <TextView
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/biryani_bold"/>
            <Spinner
                android:id="@+id/register_userType"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/round_border_white"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/register_user_firstname"
                    android:layout_weight="1"
                    android:background="@drawable/round_border_white"
                    android:layout_margin="10dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:hint="First Name"
                    android:textSize="18sp"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/gray"/>
                <EditText
                    android:id="@+id/register_user_lastname"
                    android:layout_weight="1"
                    android:background="@drawable/round_border_white"
                    android:layout_margin="10dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:hint="Last Name"
                    android:textSize="18sp"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/gray"/>
            </LinearLayout>
            <EditText
                android:id="@+id/register_userPhn"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/round_border_white"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Phone"
                android:textSize="18sp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:inputType="textEmailAddress"/>
            <EditText
                android:id="@+id/register_userPwd"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="10dp"
                android:background="@drawable/round_border_white"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="18sp"
                android:textColorHint="@color/gray"
                android:textColor="@color/gray"/>
            <Button
                android:id="@+id/registerBtn"
                android:background="@drawable/round_border_white"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Register"/>
            <TextView
                android:id="@+id/loginActivityBtn"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Login"/>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/registerSuccessfulScreen"
        android:layout_marginTop="150dp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:lottie_rawRes="@raw/successful"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Successfully Registered"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/biryani_bold"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>